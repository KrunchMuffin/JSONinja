{
  "name": "jsoninja",
  "version": "1.1.0",
  "description": "JSONinja - Advanced JSON Viewer with multi-tab support and extensive customization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --publish=never",
    "build-mac": "electron-builder --mac --publish=never",
    "build-linux": "electron-builder --linux --publish=never",
    "build-all": "electron-builder --win --mac --linux --publish=never",
    "release": "electron-builder --publish=always",
    "dev": "electron . --dev",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "json",
    "viewer",
    "electron",
    "multi-tab"
  ],
  "author": "DAB Worx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KrunchMuffin/jsoninja.git"
  },
  "homepage": "https://github.com/KrunchMuffin/jsoninja",
  "devDependencies": {
    "electron": "^37",
    "electron-builder": "^26"
  },
  "build": {
    "appId": "com.dabworx.jsoninja",
    "productName": "JSONinja",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-v${version}-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-v${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-v${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "${productName} v${version}",
      "artifactName": "${productName}-v${version}.${ext}",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "artifactName": "${productName}-v${version}-${arch}.${ext}"
    }
  }
}

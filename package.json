{
  "name": "jsoninja",
  "version": "1.0.0",
  "description": "JSONinja - Advanced JSON Viewer with multi-tab support and extensive customization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux --dir",
    "build-win-linux": "electron-builder --win --linux",
    "build-all": "electron-builder --win --mac --linux",
    "dev": "electron . --dev"
  },
  "keywords": [
    "json",
    "viewer",
    "electron",
    "multi-tab"
  ],
  "author": "DAB Worx",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.dabworx.jsoninja",
    "productName": "JSONinja - Advanced JSON Viewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "preload.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "JSONinja.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "JSONinja.icns",
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "title": "JSONinja - Advanced JSON Viewer",
      "icon": "JSONinja.icns",
      "background": "build/JSONinja.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "JSONinja.png",
      "category": "Development"
    },
    "snap": {
      "summary": "JSONinja - Advanced JSON Viewer with multi-tab support"
    }
  }
}
